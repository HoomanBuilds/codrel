{
  "name": "codrel-ide-extension",
  "displayName": "Codrel IDE",
  "icon": "./logo.png",
  "publisher": "codrel-dev",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HoomanBuilds/codrel"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codrel.addContext",
        "title": "Codrel: Add Context Tool"
      },
      {
        "command": "codrel.setToken",
        "title": "Codrel: Set API Token"
      },
      {
        "command": "codrel.setTopK",
        "title": "Codrel: Set Top K"
      }
    ]
  },
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --platform=node --external:vscode --outfile=dist/extension.js",
    "watch": "esbuild src/extension.ts --bundle --platform=node --external:vscode --outfile=dist/extension.js --watch",
    "package": "pnpm run build && vsce package"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.103.0",
    "esbuild": "^0.27.0",
    "vscode": "^1.1.37"
  }
}

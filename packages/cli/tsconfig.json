{
  "compilerOptions": {
    "ignoreDeprecations": "5.0",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}

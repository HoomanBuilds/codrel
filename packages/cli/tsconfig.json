{
  "compilerOptions": {
    "ignoreDeprecations": "5.0",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    "rootDir": "./src",
    "outDir": "./dist",

    "target": "ES2022",
    "module": "nodenext",              // required
    "moduleResolution": "nodenext",    // required

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
